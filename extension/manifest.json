{
  "manifest_version": 2,

  "name": "Limer",
  "description": "This extension will count time spent on sites",
  "version": "0.9",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },

  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_page": "dist/index.html",

  "permissions": ["background", "activeTab", "storage", "tabs", "runtime"]
}
